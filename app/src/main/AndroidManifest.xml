<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackbmu.statusquo">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_temp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_temp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccidentOccurActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme" />
        <activity
            android:name=".FourButtonActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme" />
        <activity
            android:name=".FourButton.HelpSomeoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme" />
        <activity
            android:name=".FourButton.MyHelmetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme" />
        <activity
            android:name=".FourButton.AccidentProneAreasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullTheme" />
        <activity android:name=".FourButton.HandleLightsActivity"></activity>
    </application>

</manifest>